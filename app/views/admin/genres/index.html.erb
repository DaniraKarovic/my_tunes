<div class="row">
  <div class="col-md-7">
    <h1>Genres <%= link_to 'Create new', new_admin_genre_path, class: 'btn btn-success' %></h1>


    <% unless flash[:notice].blank? %>
      <div class="alert alert-success">
        <p><%= flash[:notice] %></p>
      </div>
    <% end %>

    <h3>Genre details</h3>

    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Name</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <%= render @genres %>
      </tbody>
    </table>
  </div>
</div>
