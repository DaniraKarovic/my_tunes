<div class="row">
  <div class="col-md-7">
    <h1>Artists <%= link_to 'Create new', new_admin_artist_path, class: 'btn btn-success' %></h1>
    <%= count_for @artists, 'Total:' %>
    <hr>

    <% unless flash[:notice].blank? %>
      <div class="alert alert-success">
        <p><%= flash[:notice] %></p>
      </div>
    <% end %>

    <h3>Artist details</h3>

    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Name</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <%= render @artists %>
      </tbody>
    </table>
  </div>
</div>
