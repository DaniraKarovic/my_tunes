<div id="header">
  <div class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navMain">
          <span class="glyphicon glyphicon-chevron-left" style="color:white;"></span>
          </button>
      </div>
      <div id="page-content-wrapper">
        <% if user_signed_in? %>
          <a href="#menu-toggle" class="btn btn-default" id="menu-toggle"><i class="fa fa-bars" aria-hidden="true"></i></a>
        <% end %>
        <ul class="nav navbar-nav pull-right">
          <% unless user_signed_in? %>
            <li><%= link_to 'Login', new_user_session_path %></li>
            <li><%= link_to 'Register', new_user_registration_path %></li>
          <% end %>
          <% if user_signed_in? %>
            <li class="dropdown">
              <a data-toggle="dropdown" class="dropdown-toggle" href="#">Logged in as: <%= current_user.email %> <b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li><%= link_to 'Edit Account', edit_user_registration_path %></li>
                <li><%= link_to 'Logout', destroy_user_session_path, method: :delete %></li>
                <% if current_user.admin? || current_user.superadmin? %>
                  <li><%= link_to 'Dashboard', admin_dashboard_path %></li>
                <% end %>
              </ul>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
