<% if user_signed_in? %>
<div id="sidebar-wrapper">
  <ul class="sidebar-nav">
    <%= image_tag 'icon.jpg', :class => "brand" %>
    <li class="sidebar-header"> My Tunes </li>
      <form class="navbar-form" role="search">
        <div class="input-group add-on">
          <input class="form-control" placeholder="Search" name="srch-term" id="srch-term" type="text">
          <div class="input-group-btn">
            <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
          </div>
        </div>
      </form>
      <% if current_user.admin? || current_user.superadmin? %>
        <div class="lists">
          <li class="<%= 'active' if params[:controller]=='home' && params[:action] == 'index' %>"><%= link_to 'Homepage', root_path %></li>
          <li class="<%= 'active' if params[:controller]=='songs' && params[:action] == 'index' %>"><%= link_to 'Songs', admin_songs_path %></li>
          <li class="<%= 'active' if params[:controller]=='albums' && params[:action] == 'index' %>"><%= link_to 'Albums', admin_albums_path %></li>
          <li class="<%= 'active' if params[:controller]=='artists' && params[:action] == 'index' %>"><%= link_to 'Artists', admin_artists_path %></li>
          <li class="<%= 'active' if params[:controller]=='genres' && params[:action] == 'index' %>"><%= link_to 'Genres', admin_genres_path %></li>
        </div>
      <% else %>
        <div class="lists">
          <li class="<%= 'active' if params[:controller]=='home' && params[:action] == 'index' %>"><%= link_to 'Homepage', root_path %></li>
          <li class="<%= 'active' if params[:controller]=='home' && params[:action] == 'trending' %>"><%= link_to 'Trending', trending_path %></li>
          <li class="<%= 'active' if params[:controller]=='home' && params[:action] == 'trending' %>"><%= link_to 'My profile', trending_path %></li>
          <li class="<%= 'active' if params[:controller]=='home' && params[:action] == 'index' %>"><%= link_to 'My Playlists', tuner_playlists_path %></li>
          <li class="<%= 'active' if params[:controller]=='home' && params[:action] == 'index' %>"><%= link_to 'Favorite tracks', tuner_favorites_path %></li>
          <li class="<%= 'active' if params[:controller]=='home' && params[:action] == 'trending' %>"><%= link_to 'Contact us', trending_path %></li>
        </div>
      <% end %>
    </ul>
</div>
<% end %>
