<div class="row">
  <div class="col-md-7">
    <h1> Songs <%= link_to 'Create new', new_song_path, class: 'btn btn-success' %></h1>
    <%= count_for @songs, 'Total:' %>
    <hr>

    <% unless flash[:notice].blank? %>
      <div class="alert alert-success">
        <p><%= flash[:notice] %></p>
      </div>
    <% end %>

    <h3>Songs details</h3>

    <table class="table table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Duration</th>
          <th>Album</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <%= render @songs %>
      </tbody>
    </table>
  </div>
</div>
