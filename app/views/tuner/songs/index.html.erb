<div class="container">
  <div class="row">
    <div class="col-md-7">

      <% unless flash[:notice].blank? %>
        <div class="alert alert-success">
          <p><%= flash[:notice] %></p>
        </div>
      <% end %>

      <h3>Songs details</h3>

      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Name</th>
            <th>Artist</th>
            <th>Album</th>
            <th>Duration</th>
            <th>Genre</th>
            <th>Make a favorite</th>
            <th>Play the song</th>
            <th>Add to playlist</th>
          </tr>
        </thead>
        <tbody>
          <%= render @songs %>
        </tbody>
      </table>
    </div>
  </div>
</div>
